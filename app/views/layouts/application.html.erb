<!DOCTYPE html>
<html>
  <head>
    <title>RubyEvents - <%= @page.split('|')[1] %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag %>
  </head>

  <body>
    <%= render 'layouts/components/navbar', :page => @page %>
    <div class="container">
        <%= yield %>
    </div>
  </body>
</html>
